<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="80dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:gravity="center"
            android:text="Digite a placa do seu carro:"
            android:textColor="#000000"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/edtLetra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:digits="abcdefghijklmnopqrstuxywvz"
                android:ems="10"
                android:gravity="center"
                android:hint="LETRAS"
                android:inputType="textPersonName"
                android:maxLength="3"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edtNumero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:digits="0123456789"
                android:ems="10"
                android:gravity="center"
                android:hint="NÚMEROS"
                android:inputType="number"
                android:maxLength="4"
                android:textSize="30sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnVerificar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VERIFICAR RODÍZIO"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/edtRodizio"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:gravity="center"
            android:textColor="#7A0000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edtMsg"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center"
            android:textColor="#070707"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/edtMsg2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textColor="#020202"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/edtMsg3"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:gravity="center"
            android:textColor="#04497C"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>